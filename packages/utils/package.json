{
    "name": "@kibuildy/utils",
    "version": "0.0.6-alpha.5",
    "description": "utils for cli building",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "watch": {
        "test": {
            "patterns": [
                "src",
                "test"
            ],
            "extensions": "ts",
            "quiet": false
        }
    },
    "scripts": {
        "watch": "npm-watch",
        "test": "node ../../tests.js",
        "build": "tsc -p tsconfig.json",
        "pretest": "npm run build",
        "prepublish": "npm run build"
    },
    "author": "Salim Benabbou <benabbousalim@gmail.com>",
    "license": "ISC",
    "dependencies": {
        "chalk": "^2.3.0",
        "fs-extra": "^3.0.1",
        "glob": "^7.1.2",
        "resolve-bin": "^0.4.0",
        "rimraf": "^2.6.1"
    }
}
